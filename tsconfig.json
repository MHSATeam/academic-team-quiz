{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/api-lib/*": [
        "src/api-lib/*"
      ],
      "@/components/*": [
        "src/components/*"
      ],
      "@/src/*": [
        "src/*"
      ]
    },
    "incremental": true,
    "types": [
      "dom-screen-wake-lock"
    ]
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "exclude": [
    "./node_modules"
  ],
  "include": [
    "src",
    "./next-env.d.ts",
    "./dist/types/**/*.ts",
    ".next/types/**/*.ts"
  ]
}
